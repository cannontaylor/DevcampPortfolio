<%= form_for(blog) do |f| %>
  <% if blog.errors.any? %>
    <% blog.errors.full_messages.each do |error| %>
      <%= js add_gritter(error, title: "Cannon Taylor Portfolio", sticky: false, time: 3000) %>
    <% end %>
  <% end %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, class: 'form-control', rows: 20 %>
  </div>

  <div class="form-group">
    <%= f.submit "Create", class: 'btn btn-primary' %>
  </div>
<% end %>
